<Window x:Class="PizzaOrderingSystem.OrderSummary"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PizzaOrderingSystem"
        mc:Ignorable="d" Loaded="Window_Loaded" Background="Orange"
        Title="OrderSummary" Height="450" Width="800">
    <Grid>
        <DataGrid SelectedCellsChanged="datagrid_SelectedCellsChanged" SelectionUnit="FullRow" x:Name="datagrid" HorizontalAlignment="Left" Height="296" VerticalAlignment="Top" Width="745" Margin="24,88,0,0" SelectionChanged="datagrid_SelectionChanged"/>
        <Button Content="Back" HorizontalAlignment="Left" Margin="24,10,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Proceed to Checkout" HorizontalAlignment="Left" VerticalAlignment="Top" Width="132" Margin="637,31,0,0" Height="36" Click="Button_Click_1" RenderTransformOrigin="0.433,0.243"/>
        <Button Content="Refresh Order Status" Click="Button_Click_2" HorizontalAlignment="Left" VerticalAlignment="Top" Width="126" Margin="445,31,0,0" Height="36"/>

    </Grid>
</Window>
