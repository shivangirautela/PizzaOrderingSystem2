        mc:Ignorable="d" Loaded="Window_Loaded" Background="Orange"
        Title="PlaceOrder" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="datagrid1" SelectedCellsChanged="datagrid1_SelectedCellsChanged" SelectionUnit="FullRow" HorizontalAlignment="Left" Height="132" VerticalAlignment="Top" Width="723" Margin="31,262,0,0"/>
        <Button Content="Back" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Margin="10,10,0,0" Click="Button_Click"/>
