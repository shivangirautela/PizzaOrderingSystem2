        <Button Content="Proceed to summary" HorizontalAlignment="Left" VerticalAlignment="Top" Width="128" Margin="626,38,0,0" Height="29" Click="Button_Click_1"/>
        <Button Content="Search Pizza Ingredients" HorizontalAlignment="Left" Margin="457,35,0,0" VerticalAlignment="Top" Width="149" Height="32" Click="Button_Click_2"/>

    </Grid>
</Window>
